<view class="page"><view class="title"><text>个人信息编辑</text></view><view class="information "><view class="{{['box','name',focusStatus.name?'getFocus':'']}}"><label class="label" for="name">姓名：</label><input class="input" focus="{{focusStatus.name}}" type="text" value="{{userInfo.name}}" id="name" placeholder="填写真实姓名" confirm-type="next" cursor-spacing="100" confirm-hold="true" maxlength="12" data-event-opts="{{[['focus',[['getFocus',['$event']]]],['input',[['__set_model',['$0','name','$event',[]],['userInfo']]]]]}}" bindfocus="__e" bindinput="__e"/></view><view class="sex box"><label class="label">性别：</label><picker class="input" range="{{sexPick}}" data-event-opts="{{[['change',[['sexChange',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{sexPick[sexIndex]}}</view></picker></view><view class="{{['phoneNumber','box',focusStatus.phoneNumber?'getFocus':'']}}"><label class="label" for="phoneNumber">电话：</label><input class="input" focus="{{focusStatus.phone}}" type="digit" value="{{userInfo.phone}}" id="phoneNumber" cursor-spacing="100" confirm-type="next" placeholder="请填写你的电话" data-event-opts="{{[['focus',[['getFocus',['$event']]]],['input',[['__set_model',['$0','phone','$event',[]],['userInfo']]]]]}}" bindfocus="__e" bindinput="__e"/></view><block wx:if="{{warning!=''}}"><view class="note">{{warning}}</view></block><button class="save" type="default" hover-class="save_hover" data-event-opts="{{[['tap',[['postInfo',['$event']]]]]}}" bindtap="__e">保存</button></view></view>